<launch>

  <node pkg="message_relay" type="message_relay_node" name="message_relay_node" output="screen">
    <rosparam subst_value="true">
      to: public

      tf_prefix: robot1
      prefix_operation: add

      global_frames:
        - map
        - world

      topics:
        - topic: move_base_simple/goal
          type: geometry_msgs/PoseStamped
          queue_size: 100
        - topic: cmd_vel
          type: geometry_msgs/Twist

      services:
        - service: move_base/make_plan
          type: nav_msgs/GetPlan

      actions:
        - action: move_base
          type: move_base_msgs/MoveBaseAction
          queue_size: 10

    </rosparam>
  </node>
</launch>
